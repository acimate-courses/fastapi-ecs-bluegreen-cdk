{
  "family": "EcsBlueGreenStackTaskDef",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "REPLACE_IT",
  "taskRoleArn": "REPLACE_IT",
  "containerDefinitions": [
    {
      "name": "AppContainer",
      "image": "REPLACED_BY_CI",
      "portMappings": [
        { "containerPort": 80, "hostPort": 80, "protocol": "tcp" }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "us-east-1",
          "awslogs-group": "dev-fastapi-ecs-training-cluster-us-east-1-ecs-blue-green-AppLogGroup7D8CD952-NrhExqPOPfA2",
          "awslogs-stream-prefix": "app"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -fsS http://localhost:80/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 20
      }
    }
  ]
}
